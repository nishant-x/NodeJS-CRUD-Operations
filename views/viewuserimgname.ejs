<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        body {
            height: 100vh;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
            color: #4a4a4a;
        }

        div.container {
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 20px;
            width: 80%;
            max-width: 800px;
        }

        div.user-card {
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            margin: 15px 0;
        }

        h2 {
            font-size: 1.5rem;
            margin: 10px 0;
        }

        img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 10px;
            align-self: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Your Users</h1>
        <div>
            <% users.forEach(function(user){ %>
            <div class="user-card">
                <form action="/readimg"></form>
                <h2>User Name: <%= user.name %></h2>
                <h2>User Image:</h2>
                <img src="<%= user.img %>" alt="">
            </div>
            <% }) %>
        </div>
    </div>
</body>

</html>
